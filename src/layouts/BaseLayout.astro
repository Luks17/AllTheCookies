---
import Meta from "@/components/base/Meta.astro";
import type { MetaTags } from "@/types/Meta";
import { SITE } from "@/config.mjs";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, author, socialImage } = SITE;

const meta: MetaTags = {
  canonicalURL,
  title,
  description,
  author,
  socialImage,
};
---

<!DOCTYPE html>
<html lang="pt">
  <head>
    <Meta {...meta} />
  </head>

  <!-- lining-nums fixes raleway font oddly placed numbers -->
  <body class="bg-primary h-full w-full font-primary lining-nums">
    <slot />
  </body>
</html>
