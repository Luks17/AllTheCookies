---
import "@/styles/base.css";

import Meta from "@/components/base/Meta.astro";
import type { MetaTags as Props } from "@/types/Meta";

const meta = Astro.props;
---

<!DOCTYPE html>
<html lang="pt" class="scroll-smooth">
  <head>
    <Meta {...meta} />
  </head>

  <!-- lining-nums fixes raleway font oddly placed numbers -->
  <body class="bg-primary h-full w-full font-primary lining-nums">
    <slot />
    <script>
      import { setPreferredTheme } from "@/resources/stores/theme-store";
      import { openSearch } from "@/resources/stores/nav-store";

      const query = new URLSearchParams(window.location.search).get("q");

      if (query !== null) openSearch();

      setPreferredTheme();
    </script>
  </body>
</html>
