---
import { ChevronUp } from "@/resources/static/Icons";

export interface Props {
  type: "danger" | "caution" | "tip" | "note";
  title: string;
}

const icons = {
  note: {
    d: "M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z",
  },
  tip: {
    d: "M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z",
  },
  caution: {
    d: "M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z",
  },
  danger: {
    d: "M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z",
  },
};

const { type, title } = Astro.props;
---

<aside
  class={`my-5 px-3 rounded-md aside-tag ${type} max-h-[99rem] transition-max-height origin-top duration-200 text-skin-bright`}
>
  <button class="flex w-full justify-between title pt-2">
    <h4 class="flex items-center font-bold text-lg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d={icons[type].d}
        ></path>
      </svg>
      <span>{title}</span>
    </h4>
    <div
      class="-rotate-180 transition-transform ease-linear chevron flex items-center"
    >
      <ChevronUp />
    </div>
  </button>

  <div class="content transition-opacity py-2 font-semibold"><slot /></div>
</aside>
