---
export interface Props {
  src: string,
  alt: string,
  width: number,
  height: number,
}

const { src, alt, width, height } = Astro.props;
---

<div class="flex flex-col justify-center items-center text-skin-subtext text-sm">
  <img src={src} 
    alt={alt}
    width={width}
    height={height}
    loading="lazy"
    decoding="async" 
  />

  <slot />
</div>
