---
import LogoIcon from "@/assets/Logo.png";
import { Image } from "astro:assets";
---

<a href="/">
  <div class="relative flex items-center gap-x-2">
    <div
      class="absolute bg-glow-primary -inset-1 blur opacity-5 hover:opacity-10 ease-in transition-opacity rounded-3xl"
    >
    </div>

    <Image
      src={LogoIcon}
      alt="Logo Icon"
      class="w-9 sm:w-10"
      width={100}
      height={100}
